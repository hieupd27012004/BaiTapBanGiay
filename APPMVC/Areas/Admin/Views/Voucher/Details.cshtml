@model AppData.Model.Voucher

@{
    ViewData["Title"] = "Chi tiết Voucher";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Mã Voucher
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaVoucher)
        </dd>

        <dt class="col-sm-3">
            Mô Tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MoTaVoucher)
        </dd>

        <dt class="col-sm-3">
            Loại Giảm Giá
        </dt>
        <dd class="col-sm-9">
            @Model.GetLoaiGiamGiaDisplay()
        </dd>

        <dt class="col-sm-3">
            Giá Trị Giảm
        </dt>
        <dd class="col-sm-9">
            @if (Model.LoaiGiamGia == 1)
            {
                @(Model.GiaTriGiam + "%")
            }
            else
            {
                @Model.GiaTriGiam.ToString("N0") <span>VNĐ</span>
            }
        </dd>

        <dt class="col-sm-3">
            Giá Trị Đơn Hàng Tối Thiểu
        </dt>
        <dd class="col-sm-9">
            @(Model.GiaTriDonHangToiThieu?.ToString("N0") ?? "Không có") VNĐ
        </dd>

        <dt class="col-sm-3">
            Số Tiền Giảm Tối Đa
        </dt>
        <dd class="col-sm-9">
            @(Model.SoTienToiDa?.ToString("N0") ?? "Không có") VNĐ
        </dd>

        <dt class="col-sm-3">
            Thời Gian Hiệu Lực
        </dt>
        <dd class="col-sm-9">
            Từ @Model.NgayBatDau.ToString("dd/MM/yyyy HH:mm")
            đến @Model.NgayKetThuc.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt class="col-sm-3">
            Tổng Số Lượng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TongSoLuongVoucher)
        </dd>

        <dt class="col-sm-3">
            Số Lượng Còn Lại
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SoLuongVoucherConLai)
        </dd>

        <dt class="col-sm-3">
            Trạng Thái
        </dt>
        <dd class="col-sm-9">
            @Model.GetTrangThaiDisplay()
        </dd>

        <dt class="col-sm-3">
            Ngày Tạo
        </dt>
        <dd class="col-sm-9">
            @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt class="col-sm-3">
            Người Tạo
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NguoiTao)
        </dd>

        @if (Model.NgayUpdate.HasValue)
        {
            <dt class="col-sm-3">
                Ngày Cập Nhật
            </dt>
            <dd class="col-sm-9">
                @Model.NgayUpdate.Value.ToString("dd/MM/yyyy HH:mm")
            </dd>
        }

        @if (!string.IsNullOrEmpty(Model.NguoiUpdate))
        {
            <dt class="col-sm-3">
                Người Cập Nhật
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NguoiUpdate)
            </dd>
        }
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.VoucherId" class="btn btn-primary">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

    <style>
        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 1rem;
        }
    </style>