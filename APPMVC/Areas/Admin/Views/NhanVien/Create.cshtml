@model AppData.Model.NhanVien

@{
    ViewData["Title"] = "Tạo Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Quản lý nhân viên /</span> Tạo Nhân Viên Mới
        </h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="IdNhanVien" />

                            <div class="form-group mb-3">
                                <label asp-for="TenNhanVien" class="control-label">Tên Nhân Viên</label>
                                <input asp-for="TenNhanVien" class="form-control" placeholder="Nhập tên nhân viên" required />
                                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="SoDienThoai" class="control-label">Số Điện Thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" required />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Nhập email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="imgFile" class="control-label">Ảnh Nhân Viên</label>
                                <input type="file" name="imgFile" class="form-control" />
                                <span asp-validation-for="AnhNhanVien" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="MatKhau" class="control-label">Mật Khẩu</label>
                                <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" required />
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3" hidden>
                                <label asp-for="AuthProvider" class="control-label">AuthProvider</label>
                                <input asp-for="AuthProvider" class="form-control" required />
                                <span asp-validation-for="AuthProvider" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
                                <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" required />
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="KichHoat" class="control-label">Kích Hoạt</label>
                                <select asp-for="KichHoat" class="form-control">
                                    <option value="1">Có</option>
                                    <option value="0">Không</option>
                                </select>
                                <span asp-validation-for="KichHoat" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TrangThai" class="control-label">Trạng Thái</label>
                                <select asp-for="TrangThai" class="form-control">
                                    <option value="1">Hoạt Động</option>
                                    <option value="0">Không Hoạt Động</option>
                                </select>
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3" hidden>
                                <label asp-for="NgayTao" class="control-label">Ngày Tạo</label>
                                <input asp-for="NgayTao" class="form-control" type="date" readonly />
                                <span asp-validation-for="NgayTao" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3" hidden>
                                <label asp-for="NgayCapNhat" class="control-label" >Ngày Cập Nhật</label>
                                <input asp-for="NgayCapNhat" class="form-control" type="date" readonly />
                                <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3" hidden>
                                <label asp-for="NguoiTao" class="control-label" >Người Tạo</label>
                                <input asp-for="NguoiTao" class="form-control" readonly />
                                <span asp-validation-for="NguoiTao" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3" hidden>
                                <label asp-for="NguoiCapNhat" class="control-label" >Người Cập Nhật</label>
                                <input asp-for="NguoiCapNhat" class="form-control" readonly />
                                <span asp-validation-for="NguoiCapNhat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdchucVu" class="control-label">Chức Vụ</label>
                                <select asp-for="IdchucVu" class="form-control" asp-items="@(new SelectList(ViewBag.ChucVu, "IdChucVu", "TenChucVu"))"></select>
                                <span asp-validation-for="IdchucVu" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary" style="margin-left:15px;">Quay lại danh sách</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>